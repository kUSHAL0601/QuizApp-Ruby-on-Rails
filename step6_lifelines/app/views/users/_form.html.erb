<style type="text/css">
  #rb {
    border-radius: 15px 50px;
    background: green;
    padding: 10px;
    color: white;
    border:none;
} 
</style>

<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <center>
  <div class="field">
    <%= form.label :name , style:"font-size:25px;color:green;"  %>
    <br>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <br>
    <%= form.label :password , style:"font-size:25px;color:green;"  %>
    <br>
    <%= form.password_field :password, id: :user_password %>
  </div>

  <div class="field">
    <br>
    <%= form.label :password_confirmation , style:"font-size:25px;color:green;"  %>
    <br>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </div>
  <br>
  <br>
  <div class="actions">
  <%if session[:user_name]==="Admin"%>
    <button type="submit" id="rb" onclick="this.form.submit()" style="font-size:20px;">CREATE</button>
  <%else%>
    <button type="submit" id="rb" onclick="this.form.submit()" style="font-size:20px;">SIGNUP</button>
  <%end%>
  </div>
  </center>
<% end %>